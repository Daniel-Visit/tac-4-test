# GitHub Configuration (Optional)
# Use this if you want ADW to use a different GitHub account than your default 'gh auth' login
# If not set, ADW will use whatever GitHub account is authenticated with 'gh auth login'
GITHUB_PAT=

# Anthropic Configuration (OPTIONAL)
# Only needed if you don't have Claude Code Max plan
# If you have Max plan, Claude Code uses your plan authentication automatically
ANTHROPIC_API_KEY=

# Claude Code Path - if 'claude' does not work run 'which claude' and paste that value here
CLAUDE_CODE_PATH=claude

# Agent Cloud Sandbox Environment
E2B_API_KEY=

# Returns claude code to the root directory after every command
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# If you use cloudflare's tunnel to expose `adws/trigger_webhook.py` to github (public internet)
CLOUDFLARED_TUNNEL_TOKEN=
